<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://flatworld.eu"
    android:title="@string/english_ime_settings"
    android:key="english_ime_settings">
    <PreferenceCategory
        android:title="@string/chinese_category"
        android:key="chinese_settings">
        <ListPreference
            android:key="language_mode"
            android:title="@string/language_mode"
            android:summary="@string/language_mode_summary"
            android:persistent="true"
    	    android:defaultValue="0"
	    android:entries="@array/langArray"
	    android:entryValues="@array/langValues" />
        <ListPreference
            android:key="cangjie_mode"
            android:title="@string/cangjie_mode"
            android:persistent="true"
    	    android:defaultValue="0"
	    android:entries="@array/listArray"
	    android:entryValues="@array/listValues" />
	<CheckBoxPreference
            android:key="cangjie_english_key"
            android:title="@string/prefs_cangjie_english_key"
	    android:defaultValue="false"
            android:persistent="true"/>
	<CheckBoxPreference
            android:key="cangjie_sorting_method"
            android:title="@string/prefs_cangjie_sorting_method_key"
            android:summary="@string/prefs_cangjie_sorting_method_summary_key"
	    android:defaultValue="true"
            android:persistent="true"/>
        <CheckBoxPreference
            android:key="cangjie_autocorrection_mode"
            android:title="@string/cangjie_autocorrection_mode"
            android:persistent="true"
    	    android:defaultValue="false" />
	<CheckBoxPreference
            android:key="clear_often_used"
            android:title="@string/prefs_clear_often_used_title"
            android:summary="@string/prefs_clear_often_used_summary"
	    android:defaultValue="false"
            android:persistent="true"/>
        <CheckBoxPreference
            android:key="fullsymbol_chinesekeyboard"
            android:title="@string/fullsymbol_chinesekeyboard"
            android:defaultValue="true"
            android:persistent="true" />
        <CheckBoxPreference
            android:key="candidate_popup"
            android:title="@string/candidate_popup"
            android:summary="@string/candidate_popup_summary"
            android:defaultValue="true"
            android:persistent="true" />
	<CheckBoxPreference
            android:key="candidate_button"
            android:title="@string/prefs_candidate_button"
            android:summary="@string/prefs_candidate_button_summary"
	    android:defaultValue="false"
            android:persistent="true"/>
	<CheckBoxPreference
            android:key="always_show_english_keyboard"
            android:title="@string/prefs_always_show_english_keyboard"
	    android:defaultValue="false"
            android:persistent="true"/>
        <com.diycircuits.widgets.SeekBarPreference
            android:defaultValue="1000"
            android:key="candidate_font_size"
            android:max="2000"
            app:min="500"
            android:title="@string/prefs_candidate_font_size" />
	<CheckBoxPreference
            android:key="show_candidate_separator"
            android:title="@string/prefs_show_candidate_separator"
	    android:defaultValue="true"
            android:persistent="true"/>
	<CheckBoxPreference
            android:key="always_show_suggestions"
            android:title="@string/prefs_always_show_suggestions"
	    android:defaultValue="true"
            android:persistent="true"/>
	<net.margaritov.preference.colorpicker.ColorPickerPreference
	    android:key="normal_character_color"
	    android:title="@string/pref_normal_character_color"
	    android:defaultValue="@integer/COLOR_NORMAL"
	    alphaSlider="false"
	    />
	<net.margaritov.preference.colorpicker.ColorPickerPreference
	    android:key="frequent_character_color"
	    android:title="@string/pref_frequent_character_color"
	    android:defaultValue="@integer/COLOR_FREQUENT"
	    alphaSlider="false"
	    />
	<net.margaritov.preference.colorpicker.ColorPickerPreference
	    android:key="keyboard_key_normal_color"
	    android:title="@string/pref_keyboard_key_normal_color"
	    android:defaultValue="@integer/COLOR_NORMAL_KEY"
	    alphaSlider="false"
	    />
	<net.margaritov.preference.colorpicker.ColorPickerPreference
	    android:key="keyboard_key_hint_color"
	    android:title="@string/pref_keyboard_key_hint_color"
	    android:defaultValue="@integer/COLOR_HINT_KEY"
	    alphaSlider="true"
	    />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/general_category"
        android:key="general_settings">
        <CheckBoxPreference
            android:key="auto_cap"
            android:title="@string/auto_cap"
            android:summary="@string/auto_cap_summary"
            android:persistent="true"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="vibrate_on"
            android:title="@string/vibrate_on_keypress"
            android:defaultValue="@bool/config_default_vibration_enabled"
            android:persistent="true" />
	<PreferenceScreen
            android:key="pref_vibration_duration_settings"
            android:title="@string/prefs_keypress_vibration_duration_settings"
            android:summary="5ms"/>
        <CheckBoxPreference
            android:key="sound_on"
            android:title="@string/sound_on_keypress"
            android:defaultValue="@bool/config_default_sound_enabled"
            android:persistent="true" />
	<PreferenceScreen
            android:key="pref_keypress_sound_volume"
            android:title="@string/prefs_keypress_sound_volume_settings"
            android:summary="50"/>
        <CheckBoxPreference
            android:key="popup_on"
            android:title="@string/popup_on_keypress"
            android:persistent="true"
            android:defaultValue="@bool/config_default_popup_preview" />
        <ListPreference
            android:key="voice_mode"
            android:title="@string/voice_input"
            android:persistent="true"
            android:entryValues="@array/voice_input_modes_values"
            android:entries="@array/voice_input_modes"
            android:defaultValue="@string/voice_mode_main" />
        <com.diycircuits.widgets.SeekBarPreference
            android:defaultValue="618"
            android:key="portrait_height"
            app:min="300"
            android:max="800"
            android:title="@string/prefs_keyboard_portrait_height" />
        <com.diycircuits.widgets.SeekBarPreference
            android:defaultValue="460"
            android:key="landscape_height"
            app:min="300"
            android:max="800"
            android:title="@string/prefs_keyboard_landscape_height" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/correction_category"
        android:key="correction_settings">
      <!--
        <PreferenceScreen
            android:key="configure_dictionaries_key"
            android:title="@string/configure_dictionaries_title">
           <intent
              android:action="android.intent.action.MAIN"
              android:targetPackage="@string/dictionary_pack_package_name"
              android:targetClass="@string/dictionary_pack_settings_activity" />
        </PreferenceScreen>
	-->
        <ListPreference
            android:key="auto_correction_threshold"
            android:title="@string/auto_correction"
            android:summary="@string/auto_correction_summary"
            android:persistent="true"
            android:entryValues="@array/auto_correction_threshold_mode_indexes"
            android:entries="@array/auto_correction_threshold_modes"
            android:defaultValue="@string/auto_correction_threshold_mode_index_modest" />
        <ListPreference
            android:key="show_suggestions_setting"
            android:summary="@string/prefs_show_suggestions_summary"
            android:title="@string/prefs_show_suggestions"
            android:persistent="true"
            android:entryValues="@array/prefs_suggestion_visibility_values"
            android:entries="@array/prefs_suggestion_visibilities"
            android:defaultValue="@string/prefs_suggestion_visibility_default_value" />
    </PreferenceCategory>
